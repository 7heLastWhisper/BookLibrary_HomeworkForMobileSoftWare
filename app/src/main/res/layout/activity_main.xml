                <Image

            </androidx.cardview.widget.CardView>-->
            <androidx.appcompat.widget.SearchView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/my_identity_card"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:cardCornerRadius="100dp"
                android:layout_weight="1.0"
                android:foreground="?android:attr/selectableItemBackground"
                >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/my_identity"
                    android:layout_gravity="center"
                    />
            </androidx.cardview.widget.CardView>



        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/linear_top"
            app:layout_constraintBottom_toTopOf="@id/tabLayout" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tabLayout"
            android:background="@color/yellow"
            android:clickable="true"
            android:contentDescription="TODO" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="672dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monday"
                android:icon="@drawable/ic_baseline_menu_book_24" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tuesday"
                android:icon="@drawable/ic_baseline_favorite_24" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wednesday"
                android:icon="@drawable/ic_baseline_perm_identity_24"/>
        </com.google.android.material.tabs.TabLayout>

