<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mydialog_background">

    <TextView
        android:id="@+id/textTitle_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textAuthor_d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textTitle_d"
        android:layout_margin="5dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/textYear_d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textAuthor_d"
        android:layout_margin="5dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/textPress_d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textYear_d"
        android:layout_margin="5dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/textIsbn_d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textPress_d"
        android:layout_margin="5dp"
        android:textColor="@color/black" />


</RelativeLayout>
